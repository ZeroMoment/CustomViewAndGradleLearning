<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <cn.lzm.stu.view.and.gradle.view.FourCornerLayout
        android:id="@+id/four_layout_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >

        <TextView
            android:layout_width="@dimen/common_margin"
            android:layout_height="@dimen/common_margin"
            android:background="#FF4444"
            android:gravity="center"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="@dimen/common_margin"
            android:layout_height="@dimen/common_margin"
            android:background="#00ff00"
            android:gravity="center"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="@dimen/common_margin"
            android:layout_height="@dimen/common_margin"
            android:background="#ff0000"
            android:gravity="center"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="@dimen/common_margin"
            android:layout_height="@dimen/common_margin"
            android:background="#0000ff"
            android:gravity="center"
            android:text="3"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

    </cn.lzm.stu.view.and.gradle.view.FourCornerLayout>


    <cn.lzm.stu.view.and.gradle.view.FourCornerLayout
        android:id="@+id/four_layout_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/four_layout_one"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        >

        <TextView
            android:layout_width="@dimen/common_margin"
            android:layout_height="@dimen/common_margin"
            android:background="#FF4444"
            android:gravity="center"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="@dimen/common_margin"
            android:layout_height="@dimen/common_margin"
            android:background="#00ff00"
            android:gravity="center"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="@dimen/common_margin"
            android:background="#ff0000"
            android:gravity="center"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="@dimen/common_margin"
            android:layout_height="@dimen/common_margin"
            android:background="#0000ff"
            android:gravity="center"
            android:text="3"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

    </cn.lzm.stu.view.and.gradle.view.FourCornerLayout>

    <cn.lzm.stu.view.and.gradle.view.FourCornerLayout
        android:id="@+id/four_layout_three"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/four_layout_two"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        >

        <TextView
            android:layout_width="@dimen/common_margin"
            android:layout_height="@dimen/common_margin"
            android:background="#FF4444"
            android:gravity="center"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="@dimen/common_margin"
            android:layout_height="@dimen/common_margin"
            android:background="#00ff00"
            android:gravity="center"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="@dimen/common_margin"
            android:layout_height="@dimen/common_margin"
            android:background="#ff0000"
            android:gravity="center"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="@dimen/common_margin"
            android:layout_height="@dimen/common_margin"
            android:background="#0000ff"
            android:gravity="center"
            android:text="3"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

    </cn.lzm.stu.view.and.gradle.view.FourCornerLayout>


    <cn.lzm.stu.view.and.gradle.view.FourCornerLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/four_layout_three"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <TextView
            android:layout_width="@dimen/common_margin"
            android:layout_height="@dimen/common_margin"
            android:background="#FF4444"
            android:gravity="center"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="@dimen/common_margin"
            android:layout_height="@dimen/common_margin"
            android:background="#00ff00"
            android:gravity="center"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="@dimen/common_margin"
            android:layout_height="@dimen/common_margin"
            android:background="#ff0000"
            android:gravity="center"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="@dimen/common_margin"
            android:layout_height="@dimen/common_margin"
            android:background="#0000ff"
            android:gravity="center"
            android:text="3"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

    </cn.lzm.stu.view.and.gradle.view.FourCornerLayout>

</androidx.constraintlayout.widget.ConstraintLayout>